<UI>:
    id:scr_manager
    Scr1:
    Scr2:
<Scr2>:
    name: "Scr2"
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: txt_number
            hint_text: "input number"
        BoxLayout:
            ToggleButton:
                text:"base 2"
                group: 'convert_mode'
                on_press:root.convert(*args)
                background_color: 'blue'
            ToggleButton:
                text:"base 8"
                group: 'convert_mode'
                on_press:root.convert(*args)
                background_color: 'green'
            ToggleButton:
                text:"base 16"
                group: 'convert_mode'
                on_press:root.convert(*args)
                background_color:"skyblue"

        Label: 
            id:lbl_output
###################### UI 1 ##############################
<Scr1>:
    name:'Scr1'
    canvas.before:
        Rectangle:
            source: "2.jpg"
            size: root.width,root.height  #ปรับขนาดตามความกว้างยาวของ root หรือ หน้าจอที่แสดงผล
            pos: self.pos
    Button:
        text: 'แปลงเลขฐาน'
        font_name: 'tahoma'
        size_hint: 0.30 , 0.15
        background_color: 'skyblue'
        pos_hint: {'center_x': 0.5,'center_y': 0.50}
        on_press: app.root.current = "Scr2"



