<UI>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout: #ส่วนบน
            Spinner:
                id:spin_lang
                text:'please select'
                values:('python','php','html','sql')
                size_hint:(0.4,0.2)
                pos_hint:{'center_x': 0.5,'center_y': 0.9}
            Label:
                id:lbl_output
                text:"you selected : {}".format(spin_lang.text)

        BoxLayout: #ส่วนล่าง
            Label:
                text:"add language"
            TextInput:
                id:txt_input
            Button:
                #id:btn_additem
                text:"add item"
                on_press:root.add_item()
            
